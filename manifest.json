{
  "manifest_version": 2,

  "name": "HTTP Header Analyzer",
  "description": "Display the current (base page) http request and response headers on request",
  "version": "1.0.4",

  "background": {
     "persistent": true,
     "scripts": [
       "background.js"
     ]
  },
  "browser_action": {
    "default_title": "HTTP Header Analyzer",
    "default_icon": "icons/eye_32.png",
    "default_popup": "popup.html"
  },
  "icons": {
    "16": "icons/eye_16.png",
    "24": "icons/eye_24.png",
    "32": "icons/eye_32.png",
    "64": "icons/eye_64.png",
    "128": "icons/eye_128.png",
    "256": "icons/eye_256.png"
  },
  "permissions": [
    "http://*/*",
    "https://*/*",
    "tabs",
    "storage",
    "webRequest"
  ]
}

